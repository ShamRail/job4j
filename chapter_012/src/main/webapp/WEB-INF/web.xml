<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
         http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.EchoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReadServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.ReadServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReadServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.CreateServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.DeleteServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.UpdateServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.SignupServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjaxServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.AjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxServlet</servlet-name>
        <url-pattern>/ajaxexample</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.FileUploadServlet</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/fileupload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>ru.job4j.servlets.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TownsServlet</servlet-name>
        <servlet-class>ru.job4j.crud.presentation.TownsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TownsServlet</servlet-name>
        <url-pattern>/towns</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HallServlet</servlet-name>
        <servlet-class>ru.job4j.cinema.controllers.HallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HallServlet</servlet-name>
        <url-pattern>/hall</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>ru.job4j.cinema.controllers.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjaxHallServlet</servlet-name>
        <servlet-class>ru.job4j.cinema.controllers.AjaxHallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxHallServlet</servlet-name>
        <url-pattern>/ajaxhall</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/list</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/create</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/update</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/delete</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RegFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.RegFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegFilter</filter-name>
        <url-pattern>/signup</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/signin</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CreateFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.CreateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CreateFilter</filter-name>
        <url-pattern>/create</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>DeleteFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.DeleteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DeleteFilter</filter-name>
        <url-pattern>/delete</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UpdateFilter</filter-name>
        <filter-class>ru.job4j.crud.filters.UpdateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UpdateFilter</filter-name>
        <url-pattern>/update</url-pattern>
    </filter-mapping>


</web-app>